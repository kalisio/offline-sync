{
  "ci": false,
  "packages": [
    "packages/*",
    "example/*"
  ],
  "version": "0.2.0",
  "npmClient": "yarn",
  "command": {
    "publish": {
      "allowBranch": [
        "main"
      ],
      "message": "chore(release): publish %s",
      "conventionalCommits": true,
      "createRelease": "github"
    }
  },
  "ignoreChanges": [
    "**/changelog.md",
    "**/CHANGELOG.md",
    "**/package-lock.json",
    "**/yarn.lock",
    "**/test/**",
    "lerna.json",
    "readme.md"
  ]
}